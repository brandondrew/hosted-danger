apiVersion: apps/v1
kind: Deployment
metadata:
  name: hd-deployment
spec:
  selector:
    matchLabels:
      app: hd-app
  replicas: 8
  template:
    metadata:
      labels:
        app: hd-app
    spec:
      containers:
      - name: hd-app
        image: IMAGE
        ports:
        - containerPort: 80
